<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImageScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#565554</item>
        <item name="colorPrimaryVariant">#2E86AB</item>
        <item name="colorOnPrimary">#F6F5AE</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F24236</item>
        <item name="colorSecondaryVariant">#F6F5AE</item>
        <item name="colorOnSecondary">#565554</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ImageScanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PodkovaStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/podkova_bold</item>
    </style>


    <style name="Theme.ImageScanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ImageScanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>